<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MNCardView"
    app:cardBackgroundColor="#fcb64e"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="25dp"
    android:layout_marginVertical="30dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MainNewsRv">
        <ImageView
            android:id="@+id/workOutImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="abs"
            android:scaleType="fitCenter"
            android:src="@drawable/workout1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>


      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_centerVertical="true"
          android:layout_marginStart="20dp"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Abs"
              android:id="@+id/workOutName"
              android:textColor="@color/white"
              android:textSize="20dp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:textSize="9dp"
              android:id="@+id/nbExercises"
              android:text="10 Exercices"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:textSize="9dp"
              android:id="@+id/timeToFinish"
              android:text="20 MN"/>
      </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>